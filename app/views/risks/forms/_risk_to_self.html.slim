- if escort.from_prison?
  = f.radio_toggle :acct_status,
    choices: f.object.acct_statuses,
    inline_choices: false,
    legend_options: { class: 'form-label-assessment' },
    toggle_options: [f.object.acct_status_with_details] do
      = f.text_field :date_of_most_recently_closed_acct
      = f.text_area :acct_status_details

= f.radio_toggle_with_textarea :self_harm,
  legend_options: { class: 'form-label-assessment' },
  inline_choices: false,
  toggle_options: ['yes']

- if escort.from_police?
  = f.radio_toggle_with_textarea :observation_level,
    choices: f.object.observation_levels,
    inline_choices: false,
    legend_options: { class: 'form-label-assessment' },
    data: {toggle_field: 'level[234]'}
